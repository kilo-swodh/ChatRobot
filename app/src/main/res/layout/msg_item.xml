<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvl_time"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/ivl_avatar"
            android:layout_below="@+id/tvl_time"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@mipmap/robot"/>
        <TextView
            android:id="@+id/tvl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivl_avatar"
            android:layout_alignTop="@+id/ivl_avatar"
            android:gravity="center"
            android:background="@drawable/aio_friend_bg_nor_11"
            android:layout_marginRight="50dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvr_time"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/ivr_avatar"
            android:layout_below="@+id/tvr_time"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@mipmap/visitor"/>
        <TextView
            android:id="@+id/tvr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivr_avatar"
            android:gravity="center"
            android:background="@drawable/aio_user_bg_nor_11"
            android:layout_marginLeft="50dp"/>
    </RelativeLayout>
</LinearLayout>